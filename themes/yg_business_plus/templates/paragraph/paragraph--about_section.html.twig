<!-- About section -->
<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-md-6 about-description wow fadeInLeft">
        <h2>{{content.field_title.0}}</h2>
        <p>{{content.field_body.0}}</p>
        <a href="{{content.field_button_link.0}}" class="btn btn-infos">{{content.field_button_text.0}}</a>
      </div>
      <div class="col-md-6 about-img wow fadeInRight">
        <img src="{{ file_url(content.field_icon['#items'].entity.uri.value) }}" alt="about-img" class="img-responsive">
      </div>
    </div>
  </div>
</section>
